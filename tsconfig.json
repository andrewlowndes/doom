{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["DOM"],
        "downlevelIteration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
